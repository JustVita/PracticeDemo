<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape android:shape="oval">
            <gradient android:angle="270" android:endColor="#000000" android:startColor="#CECECE" android:type="linear"/>
            <stroke android:width="2dp" android:color="#FF3E82" />
            <corners android:radius="10dp" />
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
            <size android:width="20dp" android:height="20dp"/>
        </shape>
    </item>

    <item android:state_focused="true">

        <shape android:shape="oval">
            <gradient android:angle="270" android:endColor="#000000" android:startColor="#CECECE" />
            <stroke android:width="2dp" android:color="#F0F0F0" />
            <corners android:radius="2dp" />
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
            <size android:width="20dp" android:height="20dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <gradient android:angle="90" android:endColor="#000000" android:startColor="#CECECE" />
            <stroke android:width="2dp" android:color="#F0F0F0" />
            <corners android:radius="10dp" />
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
            <size android:width="20dp" android:height="20dp"/>
        </shape>
    </item>
</selector>